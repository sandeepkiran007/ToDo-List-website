<%- include("header") -%>
<body>
    

<div class="box" id="heading">

    <h1><%= headTitle %></h1>
</div>

<div class="box">
    
    <% Item.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                <p><%= item.name %></p>

            </div>
        </form>
    <%  }  ); %>  
    <form action="/" method="post" class="item">
        <input type="text" name="listItem" placeholder="Enter To Do item" autocomplete="off">
        <button type="submit" name="List" value="<%= headTitle %>">+</button>
    </form>

</div>
</body>

</html>